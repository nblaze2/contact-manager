<h1>Contacts</h1>

<ul>
  <% @contacts.each do |contact| %>
  <li class="contact">
    <a href="/contacts/<%= contact.id %>"><%= contact.name %></a> - <%= contact.phone_number %>
  </li>
  <% end %>
</ul>

<h4>Search Contacts:</h4>
<form class="form-inline">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input type="first_name" class="form-control" id="first_name">
  </div>
  <div class="form-group">
    <label for="pwd">Last Name:</label>
    <input type="last_name" class="form-control" id="last_name">
  </div>
  <button type="submit" class="submit">Submit</button>
</form>

<ul class="pagination">
  <li><a href="/contacts">1</a></li>
  <li><a href="/contacts/2">2</a></li>
  <li><a href="/contacts/3">3</a></li>
  <li><a href="/contacts/4">4</a></li>
  <li><a href="/contacts/5">5</a></li>
</ul>
